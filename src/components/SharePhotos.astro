---
import { CldUploadWidget } from "astro-cloudinary";
---

<section
  class="flex flex-col justify-center items-center px-4 py-8 bg-[#BF9066] w-full"
>
  <img src="/iconos/fotos.png" alt="icono de fotos" class="w-16 h-16" />
  <h1 class="mb-1 poppins-bold font-bold text-xl text-[#FEFBE6]">
    COMPARTE <br /> TUS FOTOS
  </h1>
  <p
    class="poppins-light font-light text-sm text-center mt-1 text-[#24211D] mb-5"
  >
    Sube fotos de la boda al album
  </p>
  <CldUploadWidget
    uploadPreset="upload-images-boda"
    id="upload-widget"
    options={{
      sources: ["local", "camera"],
      multiple: true,
      maxFiles: 10,
      maxFileSize: 50 * 1024 * 1024,
      language: "es",
      text: {
        es: {
          or: "o",
          menu: {
            files: "Subir desde tu dispositivo",
          },
          local: {
            browse: "Seleccionar máximo 10 imágenes",
            dd_title_single: "Arrastra tu imagen aquí",
            drop_title_single: "Suelta tu imagen aquí",
          },
        },
      },
      styles: {
        palette: {
          window: "#FEFBE6", // Fondo de la ventana emergente
          sourceBg: "#BF9066", // Fondo detrás de los íconos de carga
          windowBorder: "#CBB79F", // Color del borde
          tabIcon: "#CBB79F", // Íconos de pestañas
          inactiveTabIcon: "#CBB79F", // Íconos de pestañas inactivas
          menuIcons: "#24211D", // Color de los íconos del menú
          link: "#BF9066", // Color de enlaces
          action: "#24211D", // Botón principal (acción)
          // inProgress: "#CBB79F", // Barra de progreso
          // complete: "#BF9066", // Indicador de progreso completado
          error: "#FF5C5C", // Indicador de error
          textDark: "#24211D", // Color del texto oscuro
          textLight: "#FEFBE6", // Color del texto claro
        },
        frame: {
          background: "#FEFBE6", // Fondo del área de carga
        },
        fonts: {
          default: {
            active: true, // Activar fuente personalizada
            url: "https://fonts.googleapis.com/css2?family=Marcellus&display=swap", // Fuente elegante de Google Fonts
            family: "Marcellus, serif", // Fuente para títulos y textos
          },
        },
      },
    }}
  >
    <button
      class="poppins-medium font-medium text-sm w-[219px] h-7 text-[#FEFBE6] border-2 border-[#FEFBE6] flex justify-center items-center"
      >SUBIR FOTOS</button
    >
  </CldUploadWidget>
  <a
    href="/fotos"
    class="mt-4 poppins-medium font-medium text-sm w-[219px] h-7 text-[#FEFBE6] border-2 border-[#FEFBE6] flex justify-center items-center"
    >VER FOTOS SUBIDAS</a
  >
</section>
